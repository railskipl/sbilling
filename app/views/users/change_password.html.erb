<%= javascript_include_tag "prototype" %>

  <div class="container"> 
          
      <%= form_for(:change_password, :html => { :class => "form-horizontal" }) do |f| %>           
          
          <div class="widget stacked ">
            
            <div class="widget-header">
              <i class="icon-pencil"></i>
              <h3>Change Password</h3>
          </div> 
        
        <div class="widget-content">
        
                

                
            
                <div class="control-group">
                    <label for="inputName" class="control-label">
                        Enter Old Password</label>
                    <div class="controls">
                         <%= f.password_field :old_password %>
                    </div>
                </div>  
        
            


            <div class="control-group">
                        <label for="inputName" class="control-label">
                           Enter New Password</label>
                        <div class="controls">
                           <%= f.password_field :new_password %>
         
                        </div>
            </div>


            <div class="control-group">
                        <label for="inputName" class="control-label">
                           Enter Confirm Password</label>
                        <div class="controls">
                           <%= f.password_field :new_password_confirmation %>
         
                        </div>
            </div>


            <div class="control-group">
                        <div class="controls">
                            <button class="btn btn-primary" type="submit">
                                Submit</button>&nbsp;
                                 <td><%= link_to "Back",@user, :class=>"btn", :style => "float:bottom"%></td> 
                            
                        </div>
            </div>
                  
          
      </div>
      <% end %>

     </div>














